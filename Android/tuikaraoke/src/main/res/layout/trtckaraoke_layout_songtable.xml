<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trtckaraoke_bg_main_show"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_seat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/trtckaraoke_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textColor="@color/trtckaraoke_white"
            android:textSize="12sp"
            tools:text="Jessica" />

        <Button
            android:id="@+id/btn_switch_music"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/trtckaraoke_ic_origin_music"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_effect"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/trtckaraoke_changetype_kongling_normal"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_change_voice"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/trtckaraoke_btn_change_voice"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_choose_song"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/trtckaraoke_button_border"
            android:text="@string/trtckaraoke_btn_choose_song"
            android:textAllCaps="false"
            android:textColor="@color/trtckaraoke_white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_song_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_song_head"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/trtckaraoke_ic_music" />

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/trtckaraoke_white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/trtckaraoke_no_song"
            android:textColor="@color/trtckaraoke_white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_empty_choose_song"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/trtckaraoke_button_border"
            android:text="@string/trtckaraoke_btn_choose_song"
            android:textAllCaps="false"
            android:textColor="@color/trtckaraoke_white"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_start_chorus"
        android:enabled="false"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/trtckaraoke_button_border"
        android:text="@string/trtckaraoke_btn_start_chorus"
        android:textAllCaps="false"
        android:textColor="@color/trtckaraoke_white"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="3"
        android:textSize="60dp"
        android:visibility="gone"/>
</LinearLayout>